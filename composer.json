{
    "name": "xtwoend/service-starter",
    "description": "Service skeleton base on hyperf nano",
    "type": "project",
    "authors": [
        {
            "name": "Abdul Hafidz Anshari",
            "email": "aditans88@gmail.com"
        }
    ],
    "require": {
        "hyperf/nano": "^1.0",
        "hyperf/database": "^2.1",
        "hyperf/db-connection": "^2.1",
        "hyperf/model-cache": "^2.1",
        "hyperf/redis": "^2.1",
        "hyperf/cache": "^2.1",
        "hyperf/tracer": "^2.1"
    },
    "require-dev": {
        "hyperf/testing": "^2.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "scripts": {
        "start": "php ./bin/mix start",
        "dev": "bash ./bin/watch -c",
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "lint": "./vendor/bin/phpcs --standard=PSR12 src/",
        "cs-fix": "php-cs-fixer fix src/ --rules=@PSR12",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env-example', '.env');\""
        ]
    }
}
