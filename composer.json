{
    "name": "xtwoend/service-starter",
    "description": "Service skeleton base on hyperf nano",
    "type": "project",
    "authors": [
        {
            "name": "Abdul Hafidz Anshari",
            "email": "aditans88@gmail.com"
        }
    ],
    "require": {
        "hyperf/nano": "^1.0",
        "hyperf/database": "^2.0",
        "hyperf/db-connection": "^2.0",
        "hyperf/model-cache": "^2.0",
        "hyperf/redis": "^2.0",
        "hyperf/cache": "^2.0",
        "hyperf/tracer": "^2.0"
    },
    "require-dev": {
        "hyperf/testing": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "minimum-stability": "dev",
    "scripts": {
        "start": "php ./bin/mix start",
        "dev": "bash ./bin/watch -c",
        "test": "co-phpunit -c phpunit.xml --colors=always"
    }
}
